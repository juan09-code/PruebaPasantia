{{>navigation2}}
<section id="featured" class="pb-5">
    <div class="container text-center ">
        <h3 style="font-size: 2.5rem !important;" class=""> Gestion de Usuarios</h3>
        <hr class="mx-auto">
        <h5>
            <br>
            Puede realizar procesos de edicion de informacion,
            edicion de tipo de usuario cliente a administrador y eliminacion de usuario en el caso de ser necesario
        </h5>
    </div>
    <div class="row mx-auto container-fluid">
        <div class="row">
            <table class="table table-dark table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Cedula</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <th scope="row">{{id_user}}</th>
                        <td>{{nombres}}</td>
                        <td>{{apellidos}}</td>
                        <td>{{cedula}}</td>
                        <td>
                            <a href="/admin/EditUsers/{{id_user}}" class="btn btn-primary">Editar</a>
                            <a href="/admin/deleteUsers/{{id_user}}" class="btn btn-primary">Eliminar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
{{>endnavigation2}}